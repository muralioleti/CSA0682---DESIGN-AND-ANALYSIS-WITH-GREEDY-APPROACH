#include<stdio.h>
int main()
{
	int i,n,a[100],flag=0,key,pos,f,l,mid;
	printf("enter n & key:");
	scanf("%d%d" , &n, &key);
	printf("enter the array elements");
	for(i=0;i<n;i++)
	scanf("%d",& a[i]);
	f=0;
	l=n-1;
	while (f<=l)
	{
		mid=(f+l)/2;
		if (a[mid]==key)
		{
			flag=1;
			break;
		}
		else if(a[mid]<key)
		f=mid+1;
		else if(a[mid]>key)
		l=mid-1;


	}
	if(flag==1)
	printf("the key element %d found in %d position",key,pos);
	else
	printf("not found");
}
